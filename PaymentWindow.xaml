<Window x:Class="RouteBookingSystem.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RouteBookingSystem"
        Title="Оплата билета"
        Height="700" Width="1100"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F7FA">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/AdminStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая часть: Визуализация карты -->
        <Border x:Name="CardBorder"
                Grid.Column="0"
                Background="#2C3E50"
                CornerRadius="15"
                Height="250"
                VerticalAlignment="Center"
                RenderTransformOrigin="0.5,0.5"
                BorderBrush="#FF607D8B"
                BorderThickness="1">
            <Border.RenderTransform>
                <TranslateTransform X="0"/>
            </Border.RenderTransform>
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Чип карты -->
                <Border Background="Silver"
                        Width="50" Height="30"
                        CornerRadius="5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"/>

                <!-- Номер карты -->
                <TextBlock Grid.Row="1"
                           Text="{Binding Text, ElementName=CardNumberBox, FallbackValue='1234 5678 9012 3456'}"
                           FontSize="24"
                           Foreground="White"
                           FontFamily="Courier New"
                           Margin="0,20,0,0"
                           TextAlignment="Center"/>

                <!-- Имя держателя и срок действия -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Держатель"
                                   Foreground="White"
                                   FontSize="12"
                                   Opacity="0.7"/>
                        <TextBlock Text="{Binding Text, ElementName=CardHolderBox, FallbackValue='JOHN DOE'}"
                                   Foreground="White"
                                   FontSize="16"/>
                    </StackPanel>
                    <StackPanel Margin="40,0,0,0">
                        <TextBlock Text="Срок действия"
                                   Foreground="White"
                                   FontSize="12"
                                   Opacity="0.7"/>
                        <TextBlock Text="{Binding Text, ElementName=ExpiryDateBox, FallbackValue='MMYY'}"
                                   Foreground="White"
                                   FontSize="16"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Правая часть: Поля ввода с прокруткой -->
        <Border x:Name="FormBorder"
                Grid.Column="1"
                Margin="30,0,0,0"
                Padding="20"
                VerticalAlignment="Center"
                RenderTransformOrigin="0.5,0.5"
                BorderBrush="#FF607D8B"
                BorderThickness="1"
                Background="White"
                CornerRadius="15">
            <Border.RenderTransform>
                <TranslateTransform X="0"/>
            </Border.RenderTransform>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок -->
                    <TextBlock Grid.Row="0"
                               Text="Оплата билета"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#FF2E7D32"
                               Margin="0,0,0,15"
                               HorizontalAlignment="Center"/>

                    <!-- Поля ввода -->
                    <StackPanel Grid.Row="1">
                        <!-- Сумма -->
                        <TextBlock Text="Сумма (BYN)"
                                   FontSize="14"
                                   Foreground="#FF607D8B"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="AmountBox"
                                 Text="{Binding Amount, Mode=OneWay}"
                                 FontSize="14"
                                 HorizontalContentAlignment="Right"
                                 IsReadOnly="True"
                                 Margin="0,0,0,8"/>

                        <!-- Номер карты -->
                        <TextBlock Text="Номер карты"
                                   FontSize="14"
                                   Foreground="#FF607D8B"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="CardNumberBox"
                                 FontSize="14"
                                 PreviewTextInput="CardNumberBox_PreviewTextInput"
                                 MaxLength="19"
                                 TextChanged="CardNumberBox_TextChanged"
                                 Margin="0,0,0,8"/>
                        <!-- Ошибка для номера карты -->
                        <TextBlock x:Name="CardNumberErrorTextBlock"
                                   Text="Введите 16 цифр"
                                   Foreground="Red"
                                   Visibility="Collapsed"/>

                        <!-- Имя держателя -->
                        <TextBlock Text="Имя держателя"
                                   FontSize="14"
                                   Foreground="#FF607D8B"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="CardHolderBox"
                                 FontSize="14"
                                 PreviewTextInput="CardHolderBox_PreviewTextInput"
                                 GotFocus="CardHolderBox_GotFocus"
                                 MaxLength="30"
                                 Margin="0,0,0,8"/>
                        <!-- Ошибка для имени держателя -->
                        <TextBlock x:Name="CardHolderErrorTextBlock"
                                   Text="Введите имя латинскими буквами"
                                   Foreground="Red"
                                   Visibility="Collapsed"/>

                        <!-- Срок действия -->
                        <TextBlock Text="Срок действия (MMYY)"
                                   FontSize="14"
                                   Foreground="#FF607D8B"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="ExpiryDateBox"
                                 FontSize="14"
                                 PreviewTextInput="ExpiryDateBox_PreviewTextInput"
                                 MaxLength="4"
                                 Margin="0,0,0,8"/>
                        <!-- Ошибка для срока действия -->
                        <TextBlock x:Name="ExpiryDateErrorTextBlock"
                                   Text="Введите MMYY (например, 1225)"
                                   Foreground="Red"
                                   Visibility="Collapsed"/>

                        <!-- CVV -->
                        <TextBlock Text="CVV"
                                   FontSize="14"
                                   Foreground="#FF607D8B"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="CvvBox"
                                 FontSize="14"
                                 PreviewTextInput="CvvBox_PreviewTextInput"
                                 MaxLength="4"
                                 Margin="0,0,0,8"/>
                        <!-- Ошибка для CVV -->
                        <TextBlock x:Name="CvvErrorTextBlock"
                                   Text="Введите 3-4 цифры"
                                   Foreground="Red"
                                   Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Подсказка -->
                    <TextBlock Grid.Row="2"
                               Text="* Номер карты: 16 цифр, имя: латинские буквы (макс. 30 символов), срок: MMYY, CVV: 3-4 цифры"
                               Foreground="#FF607D8B"
                               FontStyle="Italic"
                               Margin="0,0,0,15"
                               TextWrapping="Wrap"/>

                    <!-- Кнопки -->
                    <StackPanel Grid.Row="3"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Content="Оплатить"
                                Height="40"
                                MinWidth="120"
                                Padding="12,0"
                                Margin="0,0,10,0"
                                Click="Pay_Click"/>
                        <Button Content="Отмена"
                                Height="40"
                                MinWidth="120"
                                Padding="12,0"
                                Background="#FF607D8B"
                                Foreground="White"
                                Click="Cancel_Click"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>